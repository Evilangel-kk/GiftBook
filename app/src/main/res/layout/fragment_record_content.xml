<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".RecordContentFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/result_item_border">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/resDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2024-8-25"
                android:textAppearance="@style/resFont"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:paddingTop="1dp"
                android:background="@color/rectangleStroke"/>
            <TextView
                android:id="@+id/resName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="张大千"
                android:textAppearance="@style/resFont"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:paddingTop="1dp"
                android:background="@color/rectangleStroke"/>
            <TextView
                android:id="@+id/resPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1000"
                android:textAppearance="@style/resFont"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:background="@color/rectangleStroke"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/resEvent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="结婚"
                android:textAppearance="@style/resFont"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:paddingTop="1dp"
                android:background="@color/rectangleStroke"/>
            <TextView
                android:id="@+id/resInORout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="收入"
                android:textAppearance="@style/resFont"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:paddingTop="1dp"
                android:background="@color/rectangleStroke"/>
            <TextView
                android:id="@+id/delete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="删除"
                android:textColor="@color/deleteText"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>